{
  "containers": [
    {
      "name": "petra",
      "image": "scratch",
      "secrets": [
        { "env_var": "AWS_ACCESS_KEY_ID" },
        { "env_var": "AWS_ENDPOINT_URL_S3" },
        { "env_var": "AWS_REGION" },
        { "env_var": "AWS_SECRET_ACCESS_KEY" },
        { "env_var": "BUCKET_NAME" }
      ]
    },
    {
      "name": "nginx",
      "image": "nginx:latest",
      "files": [
        {
          "guest_path": "/etc/nginx/conf.d/default.conf",
          "local_path": "nginx.conf"
        }
      ]
    }
  ]
}
